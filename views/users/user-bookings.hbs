<div class="gray-color pb-3">
  <div class="d-flex justify-content-end p-3">
    <a href="/home" class="btn btn-secondary btn-blue-grey float-right mr-5">Home</a>
  </div>
  <div>
    <h2 class="text-center font-weight-normal h2">{{name}}'s New Booking</h2>
    <div class="d-flex justify-content-center">
      <div class="div-bar"></div>
    </div>
  </div>

  <form action="/bookings" method="POST" class="m-5">

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="date">Date </label>
        <input type="date" name="date" class="form-control" id="date" placeholder="Date" required>
      </div>

      <div class="form-group col-md-6">
        <label for="time">Time </label>
        <select name="time" id="time" class="form-control">
          <option>Choose...</option>
          <option value="morning">Morning (8am to 12pm)</option>
          <option value="afternoon">Afternoon (1pm to 5pm)</option>
          <option value="evening">Evening (6pm to 11pm)</option>
        </select>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="material">Material </label>
        <select name="material" id="material" class="form-control">
          <option>Choose...</option>
          <option value="glass">Glass</option>
          <option value="oil">Oil</option>
          <option value="paper">Paper</option>
          <option value="plastic">Plastic</option>
          <option value="wood">Wood</option>
          <option value="metal">Metal</option>
        </select>
      </div>

      <div class="form-group col-md-4">
        <label for="quantity">Quantity </label>
        <div class="d-flex">
          <input type="number" name="quantity" id="quantity" placeholder="Quantity" class="form-control" required>
          <label for="kg" class="d-flex align-items-end ml-2">Kg </label>
        </div>
      </div>

      <div class="form-group col-md-4">
        <label for="responsiblePerson">Responsible Person </label>
        <input type="text" name="responsiblePerson" id="responsiblePerson" class="form-control"
          placeholder="Who will receive our team" required>
      </div>
    </div>
    <div class="d-flex justify-content-center pt-4">
      <button type="submit" class="btn btn-secondary btn-blue-grey">Schedule your waste removal</button>
    </div>
  </form>
</div>