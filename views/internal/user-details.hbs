<div class="gray-color">
  <div class="pb-4">
    {{#if message}}
    <div class="all-messages">{{message}}</div>
    {{/if}}
  </div>
  <div class="d-flex justify-content-end pr-4">
    <a href="/staff/" class="btn btn-blue-grey">Home</a>
  </div>
  <div class="d-flex flex-column align-items-center pt-5 px-5">
    <div class="d-flex flex-row justify-content-around">
      <div class="pr-4">
        <div class="d-flex justify-content-around">
          <a href="/home" class="btn btn-blue-grey">User Home</a>
          <a href="/staff/users/{{client._id}}/edit" class="btn btn-blue-grey">Edit account</a>
        </div>
        <div class="d-flex flex-column justify-content-center pt-5 pb-5">
          <div>
            <h2>{{client.name}}'s profile</h2>
          </div>
          <div class="d-flex flex-column">
            <div>Company: {{client.name}}</div>
            <div>Username: {{client.username}}</div>
            <div>Email: {{client.email}}</div>
            <div>Sector: {{client.sector}}</div>
            <div>CNPJ: {{client.cnpj}}</div>
            <div>Address: {{client.address}}</div>
            <div>Phone: {{client.phone}}</div>
          </div>
        </div>
      </div>
      <div>
        <img src="{{client.logo}}" alt="profile-picture">
      </div>
    </div>
  </div>
</div>