<div class="gray-color px-5 pb-3">
  <div>
    <h1 class="text-center pt-4 h1 font-weight-normal">Edit Profile</h1>
  </div>
  <div class="px-5 py-3">
    <form action="/staff/{{_id}}/edit" method="POST" class="px-5">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" name="username" id="username" value="{{username}}"
          placeholder="Enter username" required>
      </div>
      <br>
      <hr>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name">Name: </label>
          <input type="text" name="name" id="name" class="form-control" value="{{name}}" placeholder="Name" required>
        </div>
        <div class="form-group col-md-6">
          <label for="cnpj">CNPJ: </label>
          <input type="text" name="cnpj" id="cnpj" class="form-control" value="{{cnpj}}" placeholder="CNPJ" required>
        </div>
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" value="{{email}}"
          placeholder="Enter email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>

      <div class="form-row">
        <div class="form-group col-md-10">
          <label for="address">Address: </label>
          <input type="text" name="address" id="address" value="{{address}}" placeholder="Address" class="form-control">
        </div>
        <div class="form-group col-md-1" hidden>
          <label for="latitude">Latitude: </label>
          <input type="text" name="latitude" id="latitude" placeholder="latitude" class="form-control"
            value={{location.coordinates.[1]}}>
        </div>
        <div class="form-group col-md-1" hidden>
          <label for="longitude">Longitude: </label>
          <input type="text" name="longitude" id="longitude" placeholder="longitude" class="form-control"
            value={{location.coordinates.[0]}}>
        </div>
      </div>
      <div class="form-group">
        <label for="phone">Phone: </label>
        <input type="number" name="phone" id="phone" class="form-control" value="{{phone}}" placeholder="Phone">
      </div>

      {{#if message}}
      <div class="all-messages">{{message}}</div>
      {{/if}}
      <div class="d-flex justify-content-center pb-4 pt-3">
        <button type="submit" class="btn btn-blue-grey">Edit Profile</button>
        <a href="/staff/" class="btn btn-blue-grey">Cancel</a>
      </div>
    </form>
  </div>
</div>