{{#if message}}
<div class="all-messages">{{message}}</div>
{{/if}}

<h3>Welcome back, {{data.name}}!</h3>

<h4>Your last bookings</h4>

{{#each data.bookings}}
<div>
  <a href="/bookings/{{this._id}}">
    {{this.date}} - {{this.time}}
  </a>
  -> {{this.quantity}} kg of {{this.material}} | {{this.responsiblePerson}}
</div>
<hr>
{{/each}}

<br><br>
<a href="/profile" class="btn btn-blue-grey">My account</a>
