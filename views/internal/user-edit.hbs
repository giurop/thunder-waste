<h1 class="text-center mt-4">Edit Profile</h1>
<div class="m-5">
  <form action="/signup" method="POST">

    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" class="form-control" name="username" id="username" value="{{username}}" placeholder="Enter username" required>
    </div>
    <br>
    <hr>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name" class="form-control" value="{{name}}" placeholder="Name" required>
      </div>
      <div class="form-group col-md-6">
        <label for="cnpj">CNPJ: </label>
        <input type="text" name="cnpj" id="cnpj" class="form-control" value="{{cnpj}}" placeholder="CNPJ" required>
      </div>
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
        value="{{email}}" placeholder="Enter email" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="address">Address: </label>
        <input type="text" name="address" id="address" value="{{address}}" placeholder="Address" class="form-control">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="phone">Phone: </label>
        <input type="number" name="phone" id="phone" class="form-control" value="{{phone}}" placeholder="Phone">
      </div>
      <div class="form-group col-md-6">
        <label for="sector">Sector: </label>
        <select class="form-control" name="sector" value="{{sector}}" id="sector">
          <option>Choose...</option>
          <option value="business">Business</option>
          <option value="cottage-industry">Cottage Industry</option>
          <option value="heavy-industry">Heavy Industry</option>
          <option value="light-industry">Light Industry</option>
          <option value="manufacturing">Manufacturing</option>
        </select>
      </div>
    </div>

    {{#if admin}}
    <div class="form-group">
      <label for="accountType">Account Type: </label>
      <select name="accountType" id="accountType" value="{{accountType}}" class="form-control">
        <option>Choose...</option>
        <option value="client">Client</option>
        <option value="internal">Internal</option>
        <option value="admin">Admin</option>
      </select>
    </div>
    {{/if}}
    {{#if message}}
    <div>{{message}}</div>
    {{/if}}
    <button type="submit" class="btn btn-secondary">Edit Profile</button>
  </form>
  <a href="/staff/" class="btn btn-secondary">Home</a>
</div>