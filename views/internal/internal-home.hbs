<div class="gray-color">

  {{#if message}}
  <div class="all-messages">{{message}}</div>
  {{/if}}

  <div class="d-flex flex-row justify-content-end">
    <h1 class="d-flex align-items-center mr-5 pr-5">Welcome, {{activeUser.name}}!</h1>
    <img src="{{activeUser.logo}}" alt="Picture" class="w-25">
  </div>

  <div class="d-flex flex-row justify-content-center">
    <div class="">
      <div>
        <div class="d-flex justify-content-center mb-2">
          <h3>My Profile</h3>
        </div>
        <a href="/staff/myprofile" class="btn btn-blue-grey">See Profile</a>
        <a href="/staff/myprofile/edit" class="btn btn-blue-grey">Edit Profile</a>
      </div>

      {{#if isInternal}}
      <div class="d-flex justify-content-between mt-4">
        <div>
          <h3>Clients</h3>
          <a href="/staff/users" class="btn btn-blue-grey">See All</a>
        </div>
        <div>
          <h3>Employees</h3>
          <a href="/staff/employees" class="btn btn-blue-grey">See All</a>
        </div>
      </div>
      {{/if}}

      {{#if isAdmin}}
      <div class="d-flex flex-column">
        <div>
          <h3>Clients</h3>
          <a href="/staff/users" class="btn btn-blue-grey">See All</a>
        </div>
        <div>
          <h3>Employees</h3>
          <a href="/staff/employees" class="btn btn-blue-grey">See All</a>
          <a href="/staff/employees/add" class="btn btn-blue-grey">Add New Employee</a>
        </div>
      </div>
      {{/if}}

      {{#if isAdmin}}
      <div>
        <h3>Admin</h3>
        <a href="/staff/admin" class="btn btn-blue-grey">See All</a>
        <a href="/staff/admin/add" class="btn btn-blue-grey">Add New Admin</a>
      </div>
      {{/if}}
    </div>
    <div class="ml-5 pl-2">
      <h3>Upcoming Bookings</h3>
      <a href="/staff/bookings">Review Bookings</a>
      {{#each companiesBooking }}
      <p class="text-dark">{{this.name}}</p>
      {{#each this.bookings }}
      <li>{{this.date}} - {{this.time}}</li>
      {{/each}}
      <hr>
      {{/each}}
    </div>
  </div>

</div>