<div class="gray-color">
  {{#if message}}
  <div class="all-messages">{{message}}</div>
  {{/if}}

  <div class='d-flex flex-column align-items-center'>
    <img src="{{data.logo}}" alt="profile-picture" class="user-logo mt-4">
  </div>
  <div class="pt-5 pl-3 text-center">
    <h3 class='user-h3'>Welcome back, {{data.name}}!</h3>
  </div>

    <div class="d-flex flex-row justify-content-center pb-5 pt-3">
    <a href="/bookings" class="btn btn-blue-grey">Schedule waste remove</a>
    <a href="/profile" class="btn btn-blue-grey">My account</a>
  </div>

  <div class="pl-3 pt-5 pb-4 text-center">
    <h4 class="user-h4">Check your last bookings below</h4>
  </div>

  {{#each data.bookings}}
  <div class="px-5 d-flex flex-row justify-content-center align-items-center">
    <div class="pr-2">
      {{this.responsiblePerson}} booked on
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <div class="pr-2">
        <a href="/bookings/{{this._id}}">
          {{this.date}} - {{this.time}}
        </a>
      </div>
      <div>
        -> {{this.quantity}} kg of {{this.material}} |
      </div>
      <a href="/bookings/{{this._id}}/edit" class="px-5 btn grey darken-3 editbtn">Edit</a>
      <form action="/bookings/{{this._id}}/delete" method="POST" class="px-2"><button type="submit" class="btn btn-danger">Delete</button></form>
      <hr>
    </div>
  </div class="px-5 d-flex flex-row">
  {{/each}}

</div>