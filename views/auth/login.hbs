<div class="gray-color bg-login py-5">
  <h1 class="text-center pt-4 font-weight-normal">LOGIN</h1>
  <form action="/login" method="POST">
    <div class="d-flex flex-md-column align-items-center p-3">
      <div class="form-group">
        <label for="username">Username: </label>
        <input type="text" class="form-control mb-3" name="username" id="username" required>
        <label for="password">Password: </label>
        <input type="password" class="form-control" name="password" id="password" required>
      </div>

        {{#if message}}
        <div class="all-messages"> {{message}} </div>
        {{/if}}

        <button class="btn btn-secondary btn-blue-grey mt-3 mb-3">LOGIN</button>
        <p>If you don't have an account, click <a href="/signup">here</a></p>
    </div>
  </form>
</div>